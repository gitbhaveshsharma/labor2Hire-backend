{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Authentication Screen Configuration Schema",
  "type": "object",
  "properties": {
    "screenType": {
      "type": "string",
      "enum": ["Auth"],
      "description": "Screen type identifier"
    },
    "metadata": {
      "type": "object",
      "required": ["screenTitle", "description", "version", "lastUpdated"],
      "properties": {
        "screenTitle": {
          "type": "string",
          "description": "Title displayed on the authentication screen"
        },
        "description": {
          "type": "string",
          "description": "Screen description"
        },
        "version": {
          "type": "string",
          "description": "Version number"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of last update"
        }
      }
    },
    "globalStyles": {
      "type": "object",
      "properties": {
        "backgroundColor": {
          "type": "string",
          "description": "Background color"
        },
        "statusBar": {
          "type": "object",
          "properties": {
            "barStyle": { "type": "string" },
            "backgroundColor": { "type": "string" }
          }
        }
      }
    },
    "components": {
      "type": "array",
      "description": "Array of UI components",
      "items": { "$ref": "#/definitions/Component" }
    },
    "errorState": {
      "$ref": "#/definitions/Component",
      "description": "Error state component"
    },
    "secondaryColor": {
      "type": "string",
      "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "description": "Secondary color in hex format"
    },
    "accentColor": {
      "type": "string",
      "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "description": "Accent color in hex format"
    },
        "image": {
    "type": "object",
    "properties": {
        "url": {
            "type": "string",
            "format": "uri",
            "description": "URL of the image to display on the authentication screen"
        },
        "alt": {
            "type": "string",
            "description": "Alternative text for the image"
        },
        "position": {
            "type": "string",
            "enum": ["top", "bottom", "left", "right", "center"],
            "description": "Position of the image on the screen"
        }
    },
    "required": ["url"],
    "additionalProperties": false
},
    "loginButton": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "minLength": 1,
          "maxLength": 50
        },
        "backgroundColor": {
          "type": "string",
          "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
        },
        "textColor": {
          "type": "string",
          "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
        },
        "borderRadius": {
          "type": "string",
          "pattern": "^\\d+(px|em|rem|%)$"
        },
        "enabled": {
          "type": "boolean"
        }
      },
      "required": ["text", "backgroundColor", "textColor", "enabled"],
      "additionalProperties": false
    },
    "registerButton": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "minLength": 1,
          "maxLength": 50
        },
        "backgroundColor": {
          "type": "string",
          "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
        },
        "textColor": {
          "type": "string",
          "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
        },
        "borderRadius": {
          "type": "string",
          "pattern": "^\\d+(px|em|rem|%)$"
        },
        "enabled": {
          "type": "boolean"
        }
      },
      "required": ["text", "backgroundColor", "textColor", "enabled"],
      "additionalProperties": false
    },
    "forgotPasswordLink": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "minLength": 1,
          "maxLength": 50
        },
        "textColor": {
          "type": "string",
          "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
        },
        "enabled": {
          "type": "boolean"
        }
      },
      "required": ["text", "textColor", "enabled"],
      "additionalProperties": false
    },
    "socialLogin": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "providers": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["google", "facebook", "apple", "linkedin", "twitter"]
          },
          "uniqueItems": true
        },
        "googleButton": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "minLength": 1,
              "maxLength": 50
            },
            "backgroundColor": {
              "type": "string",
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
            },
            "textColor": {
              "type": "string",
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
            }
          },
          "required": ["text", "backgroundColor", "textColor"],
          "additionalProperties": false
        },
        "facebookButton": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "minLength": 1,
              "maxLength": 50
            },
            "backgroundColor": {
              "type": "string",
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
            },
            "textColor": {
              "type": "string",
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
            }
          },
          "required": ["text", "backgroundColor", "textColor"],
          "additionalProperties": false
        }
      },
      "required": ["enabled"],
      "additionalProperties": false
    },
    "inputFields": {
      "type": "object",
      "properties": {
        "phoneNumber": {
          "type": "object",
          "properties": {
            "placeholder": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100
            },
            "required": {
              "type": "boolean"
            },
            "validation": {
              "type": "string",
              "enum": ["phone", "email", "text"]
            }
          },
          "required": ["placeholder", "required"],
          "additionalProperties": false
        },
        "password": {
          "type": "object",
          "properties": {
            "placeholder": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100
            },
            "required": {
              "type": "boolean"
            },
            "minLength": {
              "type": "integer",
              "minimum": 4,
              "maximum": 20
            }
          },
          "required": ["placeholder", "required"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "messaging": {
      "type": "object",
      "properties": {
        "welcomeText": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200
        },
        "errorMessages": {
          "type": "object",
          "properties": {
            "invalidCredentials": {
              "type": "string",
              "minLength": 1,
              "maxLength": 200
            },
            "networkError": {
              "type": "string",
              "minLength": 1,
              "maxLength": 200
            },
            "serverError": {
              "type": "string",
              "minLength": 1,
              "maxLength": 200
            }
          },
          "additionalProperties": false
        },
        "successMessages": {
          "type": "object",
          "properties": {
            "loginSuccess": {
              "type": "string",
              "minLength": 1,
              "maxLength": 200
            },
            "registrationSuccess": {
              "type": "string",
              "minLength": 1,
              "maxLength": 200
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "features": {
      "type": "object",
      "properties": {
        "biometricLogin": {
          "type": "boolean"
        },
        "rememberMe": {
          "type": "boolean"
        },
        "autoLogin": {
          "type": "boolean"
        },
        "maintenanceMode": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "animations": {
      "type": "object",
      "properties": {
        "enableTransitions": {
          "type": "boolean"
        },
        "transitionDuration": {
          "type": "integer",
          "minimum": 100,
          "maximum": 2000
        },
        "enableSplashScreen": {
          "type": "boolean"
        },
        "splashDuration": {
          "type": "integer",
          "minimum": 1000,
          "maximum": 10000
        }
      },
      "additionalProperties": false
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Version number in semver format"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "_metadata": {
      "type": "object",
      "description": "Internal metadata (automatically managed)",
      "additionalProperties": true
    }
  },
  "required": [
    "screenTitle",
    "backgroundColor",
    "primaryColor",
    "version",
    "lastUpdated"
  ],
  "additionalProperties": false
}
