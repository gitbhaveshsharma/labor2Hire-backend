{
  "screenType": "ChooseLanguage",
  "metadata": {
    "screenTitle": "Choose Your Language",
    "description": "Language selection screen with unified styles (matching AuthPhone screen)",
    "version": "{{VERSION}}",
    "lastUpdated": "{{TIMESTAMP}}"
  },
  "globalStyles": {
    "backgroundColor": "#ffffff",
    "statusBar": {
      "barStyle": "dark-content",
      "backgroundColor": "#ffffff"
    }
  },
  "components": [
    {
      "type": "SafeAreaView",
      "style": {
        "flex": 1,
        "backgroundColor": "#ffffff",
        "justifyContent": "space-around"
      },
      "children": [
        {
          "type": "View",
          "style": {
            "paddingTop": 24
          },
          "children": [
            {
              "type": "View",
              "style": {
                "alignItems": "center",
                "width": "100%",
                "height": "30%",
                "justifyContent": "center",
                "marginTop": 30
              },
              "children": [
                {
                  "type": "Text",
                  "props": { "text": "Choose Your" },
                  "style": {
                    "fontSize": 50,
                    "color": "#000000",
                    "fontWeight": "600",
                    "letterSpacing": 0.2
                  }
                },
                {
                  "type": "Text",
                  "props": { "text": "Language" },
                  "style": {
                    "fontSize": 60,
                    "fontWeight": "bold",
                    "color": "#000000",
                    "letterSpacing": 0.2
                  }
                }
              ]
            },
            {
              "type": "View",
              "style": {
                "width": "80%",
                "alignSelf": "center"
              },
              "children": [
                {
                  "type": "TouchableOpacity",
                  "style": {
                    "flexDirection": "row",
                    "alignItems": "center",
                    "backgroundColor": "#f0f4ff",
                    "borderWidth": 2,
                    "borderColor": "#0984e3",
                    "borderRadius": 12,
                    "paddingVertical": 16,
                    "paddingHorizontal": 20,
                    "marginBottom": 16
                  },
                  "actions": {
                    "onPress": {
                      "type": "selectLanguage",
                      "payload": {
                        "languageCode": "hi",
                        "navigateTo": "Auth"
                      }
                    }
                  },
                  "children": [
                    {
                      "type": "View",
                      "style": {
                        "width": 40,
                        "height": 40,
                        "borderRadius": 20,
                        "backgroundColor": "#0984e3",
                        "alignItems": "center",
                        "justifyContent": "center",
                        "marginRight": 16
                      },
                      "children": [
                        {
                          "type": "Text",
                          "props": { "text": "अ" },
                          "style": {
                            "fontSize": 20,
                            "color": "#ffffff",
                            "fontWeight": "500"
                          }
                        }
                      ]
                    },
                    {
                      "type": "Text",
                      "props": { "text": "हिन्दी" },
                      "style": {
                        "color": "#000000",
                        "fontWeight": "500",
                        "fontSize": 25
                      }
                    }
                  ]
                },
                {
                  "type": "TouchableOpacity",
                  "style": {
                    "flexDirection": "row",
                    "alignItems": "center",
                    "backgroundColor": "#f4f0ff",
                    "borderWidth": 1,
                    "borderColor": "#6c5ce7",
                    "borderRadius": 12,
                    "paddingVertical": 16,
                    "paddingHorizontal": 20
                  },
                  "actions": {
                    "onPress": {
                      "type": "selectLanguage",
                      "payload": {
                        "languageCode": "en",
                        "navigateTo": "Auth"
                      }
                    }
                  },
                  "children": [
                    {
                      "type": "View",
                      "style": {
                        "width": 40,
                        "height": 40,
                        "borderRadius": 20,
                        "backgroundColor": "#6c5ce7",
                        "alignItems": "center",
                        "justifyContent": "center",
                        "marginRight": 16
                      },
                      "children": [
                        {
                          "type": "Text",
                          "props": { "text": "En" },
                          "style": {
                            "fontSize": 18,
                            "color": "#ffffff",
                            "fontWeight": "500"
                          }
                        }
                      ]
                    },
                    {
                      "type": "Text",
                      "props": { "text": "English" },
                      "style": {
                        "fontSize": 25,
                        "color": "#000000",
                        "fontWeight": "500",
                        "letterSpacing": 0.5
                      }
                    }
                  ]
                }
              ]
            },
            {
              "type": "View",
              "style": {
                "width": "100%",
                "height": "51%",
                "position": "relative"
              },
              "children": [
                {
                  "type": "ImageBackground",
                  "props": {
                    "source": {
                      "uri": "https://wbtgxaqaqispcvvtvwsx.supabase.co/storage/v1/object/public/L2H/onboarding-screen/choose-lang.png"
                    },
                    "resizeMode": "cover"
                  },
                  "style": {
                    "width": "100%",
                    "height": "100%",
                    "position": "relative"
                  },
                  "children": [
                    {
                      "type": "View",
                      "style": {
                        "position": "absolute",
                        "top": 0,
                        "left": 0,
                        "width": "100%",
                        "height": "100%"
                      },
                      "children": [
                        {
                          "type": "LinearGradient",
                          "props": {
                            "colors": [
                              "rgba(255,255,255,1)",
                              "rgba(255,255,255,0)"
                            ],
                            "start": { "x": 0, "y": 0 },
                            "end": { "x": 0, "y": 1 }
                          },
                          "style": {
                            "flex": 1
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "loadingState": {
    "type": "SafeAreaView",
    "style": {
      "flex": 1,
      "justifyContent": "center",
      "alignItems": "center",
      "backgroundColor": "#ffffff"
    },
    "children": [
      {
        "type": "StatusBar",
        "props": {
          "barStyle": "dark-content",
          "backgroundColor": "#ffffff"
        }
      },
      {
        "type": "ActivityIndicator",
        "props": {
          "size": "large",
          "color": "#007bff"
        },
        "style": {
          "marginBottom": 16
        }
      },
      {
        "type": "Text",
        "props": {
          "text": "Loading language options..."
        },
        "style": {
          "fontSize": 18,
          "color": "#333333",
          "textAlign": "center",
          "fontWeight": "500"
        }
      },
      {
        "type": "Text",
        "props": {
          "text": "Please wait while we prepare your language selection."
        },
        "style": {
          "fontSize": 14,
          "color": "#666666",
          "textAlign": "center",
          "marginTop": 8
        }
      }
    ]
  },
  "errorState": {
    "type": "SafeAreaView",
    "style": {
      "flex": 1,
      "justifyContent": "center",
      "alignItems": "center",
      "backgroundColor": "#ffffff",
      "padding": 20
    },
    "children": [
      {
        "type": "Text",
        "props": {
          "text": "⚠️"
        },
        "style": {
          "fontSize": 48,
          "textAlign": "center",
          "marginBottom": 16
        }
      },
      {
        "type": "Text",
        "props": {
          "text": "Connection Error"
        },
        "style": {
          "fontSize": 20,
          "fontWeight": "bold",
          "color": "#ff3333",
          "textAlign": "center",
          "marginBottom": 8
        }
      },
      {
        "type": "Text",
        "props": {
          "text": "Failed to load language options. Please check your internet connection and try again."
        },
        "style": {
          "fontSize": 16,
          "color": "#666666",
          "textAlign": "center",
          "marginBottom": 24,
          "lineHeight": 22
        }
      },
      {
        "type": "TouchableOpacity",
        "style": {
          "backgroundColor": "#007bff",
          "paddingHorizontal": 24,
          "paddingVertical": 12,
          "borderRadius": 8,
          "elevation": 2
        },
        "actions": {
          "onPress": {
            "type": "retryLoad",
            "payload": {
              "message": "Retrying language load..."
            }
          }
        },
        "children": [
          {
            "type": "Text",
            "props": {
              "text": "Try Again"
            },
            "style": {
              "color": "#ffffff",
              "fontSize": 16,
              "fontWeight": "600"
            }
          }
        ]
      }
    ]
  }
}
