{
  "name": "remote-config-testing",
  "version": "1.0.0",
  "description": "Test dependencies for remote configuration module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "socket.io-client": "^4.7.2",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-typescript": "^7.22.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.ts$": "babel-jest"
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/modules/remote-config/**/*.js",
      "!src/modules/remote-config/tests/**",
      "!src/modules/remote-config/client-example.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/modules/remote-config/tests/setup.js"
    ]
  },
  "babel": {
    "presets": [
      ["@babel/preset-env", { "targets": { "node": "18" } }],
      "@babel/preset-typescript"
    ]
  }
}
